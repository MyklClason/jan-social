<% disabled = !(message.creator == current_user) ? " disabled" : "" %>

<td>
  <%= link_to (disabled ? '#' : edit_message_path(message)), :class => "btn btn-warning" + disabled do %>
  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
  <% end %>
</td>
<td>
  <%= link_to (disabled ? '#' : message), :class => "btn btn-danger" + disabled,
method: :delete, data: { confirm: 'Are you sure?' } do %>
  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  <% end %>
</td>