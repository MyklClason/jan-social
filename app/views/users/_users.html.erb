<table>
  <thead>
    <tr>
      <th>Name</th>
      <% if display_actions %>
        <th colspan="3">Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <% if display_actions %>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>